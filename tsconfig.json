{
  "ts-node": {
    "files": true
  },
  "files": [
    "app/types/express.d.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "typeRoots": ["./app/types", "./types", "./node_modules/@types"]
  },
  "include": ["./app/**/*", "server.ts"],
  "exclude": ["node_modules"]
}